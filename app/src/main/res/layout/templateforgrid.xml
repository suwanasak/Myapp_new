<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#EAE5E5" android:orientation="vertical" android:padding="5dp" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="5dp">
    <TextView android:id="@+id/txtUser"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:text="COUNTRY"
        android:textStyle="bold"
        android:textColor="#ff3c3c"
        android:textSize="16sp" >
    </TextView>

    <TextView
        android:id="@+id/txtPass"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:text="CONTINENT"
        android:textStyle="bold|italic"
        android:textColor="#0080ff"
        android:textSize="16sp" >
    </TextView>

        <TextView
            android:id="@+id/txtOn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:text="COUNTRY"
            android:textColor="#9C27B0"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtRun"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:text="CONTINENT"
            android:textColor="#E91E63"
            android:textSize="16sp"
            android:textStyle="bold|italic"></TextView>
    </LinearLayout>

</LinearLayout>
